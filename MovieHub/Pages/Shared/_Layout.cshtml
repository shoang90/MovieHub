<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark border-bottom border-warning">
            <div class="container">
                <div class="ml-3 d-flex align-items-end">
                    <a class="navbar-brand text-light" asp-area="" asp-page="/Index">
                        <img id="logoNav" src="~/images/movieHubLogo.png" alt="Movie Hub" />
                        <p class="d-inline text-white fs-5">MovieHub</p>
                    </a>
                </div>
                <button class="navbar-toggler border-secondary mr-3" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" id="navbarToggleExternalContent" data-bs-theme="dark">
                    <span class="navbar-toggler-icon text-light"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item px-2">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Accueil</a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="nav-link text-light" asp-area="" asp-page="/MyLibrary">Ma bibliothèque</a>
                        </li>
                        <li class="nav-item border border-warning px-2">
                            <a class="nav-link text-light" asp-area="" asp-page="/ProjectInfos">Infos du projet</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top border-warning footer text-muted">
        <div class="container text-light d-flex justify-content-between">
            <div class="m-0">&copy; 2024 - MovieHub</div>
            <div>Stéphane Hoang</div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        const offcanvasElementList = document.querySelectorAll('.offcanvas')
        const offcanvasList = [...offcanvasElementList].map(offcanvasEl => new bootstrap.Offcanvas(offcanvasEl))
    </script>
</body>
</html>
